# MCP服务器配置
MCP_HOST=0.0.0.0
MCP_PORT=8000
MCP_TRANSPORT=streamable-http

# ROS配置
ROSBRIDGE_IP=10.90.0.101
ROSBRIDGE_PORT=9090
LOCAL_IP=10.90.0.101

# 客户端配置（用于stdio包装器）
MCP_SERVER_URL=http://localhost:8000/mcp
